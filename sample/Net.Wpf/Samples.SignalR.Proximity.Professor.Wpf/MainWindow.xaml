<Window x:Class="Samples.SignalR.Proximity.Professor.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.SignalR.Proximity.Professor.Wpf"  
        mc:Ignorable="d"
        Height="550" Width="800" Background="#30FFFFFF">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="Black" Height="130" Width="600" CornerRadius="10" BorderBrush="LightBlue" BorderThickness="1" Margin="10">
            <Image  Source="{StaticResource picto_professeur_Source}" Height="60" Width="60" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Image.Clip>
                    <GeometryGroup>
                        <EllipseGeometry RadiusX="29" RadiusY="29" Center="30,30"  />
                        <EllipseGeometry RadiusX="28" RadiusY="28" Center="30,30"  />
                        <EllipseGeometry RadiusX="30" RadiusY="30" Center="30,30"  />
                    </GeometryGroup> 
                </Image.Clip>
            </Image>
        </Border>
    </Grid>
</Window>
