<Window x:Class="Samples.SignalR.Proximity.Student.Wpf.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.SignalR.Proximity.Student.Wpf"  
        mc:Ignorable="d"
        Height="550" Width="800" Background="#30FFFFFF">

    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
 
        <Border Grid.Column="1" Background="#30FFFFFF"  CornerRadius="8" BorderBrush="LightBlue" BorderThickness="2" Margin="15">
            <ListBox ItemsSource="{Binding Students}" HorizontalContentAlignment="Stretch" Background="Transparent" BorderThickness="0" BorderBrush="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5">
                            <StackPanel Orientation="Horizontal"> 
                                <Label Content="{Binding Name}" Foreground="Orange" FontStyle="Italic" FontWeight="Bold" FontSize="12"/>
                                <Button Command="{Binding SendCommand}" Width="100" Content="Send"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

    </Grid>
</Window>